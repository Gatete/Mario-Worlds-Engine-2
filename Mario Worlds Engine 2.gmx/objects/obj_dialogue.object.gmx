        <arguments>
          <argument>
            <kind>1</kind>
            <string>///Display the message box

//Animate dialog cursors
anim2 += 0.05;

//Draw the screenshot if it exists
if (background_exists(back)) {

    //Disable alpha blending
    draw_enable_alphablend(0);
    
    //Draw screenshot
    draw_background(back,view_xview[0],view_yview[0]);
    
    //Enable alpha blending
    draw_enable_alphablend(1);
}

//Draw the message box
draw_sprite_ext(spr_dialog,0,view_xview[0]+37,view_yview[0]+140,1,1,0,c_white,0.9);

//If the text should be displayed
if (showing) {   
    
    //Increment the number of letters that should be displayed
    if (a &lt; string_length(text)) {
    
        a++;
    }
    
    //Set the font
    draw_set_font(font); 

    //Draw the text up to the number of letters that should be displayed
    draw_text_colour(view_xview[0]+89,view_yview[0]+152,string_copy(text,1,a),c_black,c_black,c_black,c_black,0.9);
    draw_text_colour(view_xview[0]+88,view_yview[0]+151,string_copy(text,1,a),c_white,c_white,c_white,c_white,0.9);
    
    //Draw mugshot if exists
    if (mugshot != noone) {
    
        //Draw the mugshot
        draw_sprite_ext(mugshot,anim,view_xview[0]+41,view_yview[0]+149,1,1,0,c_white,0.9);
        
        //Animate the mugshot
        if (a &lt; string_length(text))       
            anim += 0.125;
        else
            anim = 0;
    }
    
    //Draw continue / finish arrow.
    if (a = string_length(text)) {
    
        if (newtext = "")
            draw_sprite_ext(spr_dialog_end,anim2,view_xview[0]+330,view_yview[0]+185,1,1,0,c_white,0.9);
        else
            draw_sprite_ext(spr_dialog_continue,anim2,view_xview[0]+330,view_yview[0]+196,1,1,0,c_white,0.9);
    }
}
</string>
